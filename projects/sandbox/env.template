# Server Configuration
PORT=8080
AUTH_TOKEN=dev

# Python Configuration
# Path to the python executable within a virtual environment, relative to project root
PYTHON_VENV=python-venv/bin/python

# Browser Configuration (Playwright)
MAX_BROWSER_SESSIONS=10
BROWSER_SESSION_TIMEOUT=600000
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720
BROWSER_DEVICE=desktop

# Storage Configuration (Bucket Cache)
STORAGE_BUCKET_DIR=/tmp/agentos-sandbox-bucket
# Cleanup interval in milliseconds (default: 10 mins)
STORAGE_CLEANUP_INTERVAL_MS=600000
# Retention time in milliseconds (default: 1 hour)
STORAGE_RETENTION_MS=3600000
