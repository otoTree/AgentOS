# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/agentos

# NextAuth Configuration
# The base URL of your application
NEXTAUTH_URL=http://localhost:3001
# A random secret string for JWT encryption (you can generate one with `openssl rand -base64 32`)
NEXTAUTH_SECRET=your-nextauth-secret-change-me

# Platform Admin Configuration
# Default root administrator email (used for initial login and system management)
ROOT_EMAIL=root@agentos.local
# Initial root password (used during database seeding)
ROOT_PASSWORD=admin-password-change-me

# Object Storage (S3/OSS) Configuration
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=agentos
# Optional: Public URL for accessing files (e.g., CDN or Minio public endpoint)
# S3_PUBLIC_URL=http://localhost:9000/agentos

# Sandbox Configuration
# URL of the sandbox service for executing skills
SANDBOX_URL=http://localhost:8080
# Authentication token for the sandbox service
SANDBOX_TOKEN=dev
