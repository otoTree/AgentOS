{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2015",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agentos/global": ["../global/index.ts"],
      "@agentos/service": ["../service/index.ts"]
    },
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
